# Example Terraform variables file for Nowhere Land
# Copy this file to terraform.tfvars and update with your actual values

# Project Configuration
project_name = "nowhereland"
environment  = "prod"  # Change to "dev", "staging", or "prod"
aws_region   = "us-east-1"

# OpenSearch Configuration
opensearch_instance_type  = "t3.small.search"
opensearch_instance_count = 1
opensearch_storage_size   = 20

# Security Configuration
# IMPORTANT: Replace these with your actual IP addresses
admin_ip_whitelist = [
  "203.0.113.1/32",    # Your home IP address
  "203.0.113.100/32",  # Your office IP address
  # Add more IP addresses as needed
]

# Feature Toggles
enable_production_features = true   # Set to false for dev/staging
enable_detailed_monitoring = true   # Set to false to reduce costs

# Backup Configuration
backup_retention_days = 30  # 30 days for production, 7 for staging, 1 for dev
log_retention_days    = 14  # CloudWatch log retention

# Additional Tags
additional_tags = {
  Owner       = "jan"
  CostCenter  = "personal"
  Backup      = "required"
  Monitoring  = "enabled"
}

